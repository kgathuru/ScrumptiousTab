{
  "name": "scrumptious",
  "version": "1.0.0",
  "description": "Kanban board for the Chrome new tab",
  "main": "index.js",
  "scripts": {
    "start": "node_modules/.bin/webpack-dev-server --mode development --open --hot",
    "build": "node_modules/.bin/webpack --config webpack.prod.js --mode production",
    "build-firefox": "node_modules/.bin/webpack --config webpack.firefox.js --mode production",
    "build-staging": "node_modules/.bin/webpack --config webpack.staging.js --mode production",
    "build-demo": "node_modules/.bin/webpack --config webpack.demo.js --mode development",
    "deploy-demo": "npm run build-demo && aws s3 sync dist/ s3://demo.scrumptioustab.com",
    "serve": "node_modules/.bin/http-server ./dist",
    "test": "NODE_ENV=test jest --verbose false --runInBand --coverage && exit 0",
    "test:ci": "NODE_ENV=test jest --coverage && cat ./coverage/lcov.info | codacy-coverage --verbose",
    "test:coverage": "NODE_ENV=test jest --verbose --coverage && exit 0",
    "test:single": "NODE_ENV=test jest --verbose false --coverage -t Card && exit 0",
    "deploy": "node ./deploy.js"
  },
  "author": "Max Freundlich",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@loadable/component": "^5.5.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "babel-polyfill": "^6.26.0",
    "browser-image-compression": "^1.0.0",
    "chrome-storage-largesync": "0.0.4",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "dotenv-webpack": "^1.7.0",
    "emotion": "^10.0.9",
    "eslint-import-resolver-webpack": "^0.11.1",
    "file-loader": "^4.0.0",
    "immutability-helper": "^3.0.0",
    "immutable": "^4.0.0-rc.12",
    "is-hotkey": "^0.1.4",
    "is-url": "^1.2.4",
    "localforage": "^1.7.3",
    "lz-string": "^1.4.4",
    "mini-css-extract-plugin": "^0.7.0",
    "natural-drag-animation-rbdnd": "^2.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^11.0.3",
    "react-dom": "^16.6.3",
    "react-dropzone": "^10.1.5",
    "react-input-autosize": "^2.2.1",
    "react-pose": "^4.0.5",
    "react-redux": "^7.0.3",
    "react-stripe-elements": "^5.0.1",
    "react-toggle": "^4.0.2",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "slate": "^0.44.9",
    "slate-plain-serializer": "^0.6.30",
    "slate-react": "^0.21.12",
    "url-loader": "^2.0.0",
    "uuid": "^3.3.2",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "babel": "^6.23.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-dynamic-import": "^2.1.0",
    "chai": "^4.2.0",
    "chrome-webstore-upload": "^0.2.2",
    "codacy-coverage": "^3.4.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-cli": "^24.8.0",
    "node-sass": "^4.10.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "redux-mock-store": "^1.5.3",
    "regenerator-runtime": "^0.13.2",
    "sass-loader": "^7.1.0",
    "sinon": "^7.1.1",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.25.1",
    "webpack-async-chunk-names-plugin": "^0.1.1",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-node-externals": "^1.7.2",
    "zip-folder": "^1.0.0"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      ".+\\.(css|scss|png)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/conf/setupTests.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  }
}
